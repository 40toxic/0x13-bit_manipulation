/**
 * rot13 - Encode string using rot13
 * @s: string to encode
 *
 * Return: Pointer to string
 */
char *rot13(char *s)
{
	int i, j;
	char abc[] = "aAbBcCdDeEfFgGhHiIjJkKlLmMnNoOpPqQrRsStTuUvVwWxXyYzZ";
	/*char nop[] = "nNoOpPqQrRsStTuUvVwWxXyYzZaAbBcCdDeEfFgGhHiIjJkKlLmM";*/

	i = 0;
	while (s[i] != 0)
	{
		j = 0;
		while (abc[j] != 0)
		{
			if (s[i] == abc[j])
				s[i] = abc[j + 13];
			j++;
		}
		i++;
	}
	return (s);
}
